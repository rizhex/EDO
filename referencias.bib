@article{PRADASVELASCO2009473,
  title    = {Modelos matemáticos para la evaluación económica: los modelos dinámicos basados en ecuaciones diferenciales},
  journal  = {Gaceta Sanitaria},
  volume   = {23},
  number   = {5},
  pages    = {473-478},
  year     = {2009},
  issn     = {0213-9111},
